{
  "name": "samwilson/mwcli",
  "description": "A Command Line Interface for managing MediaWiki installations.",
  "keywords": [
    "cli",
    "mediawiki"
  ],
  "homepage": "https://www.mediawiki.org/wiki/...",
  "license": "MIT",
  "bin": [
    "bin/mwcli"
  ],
  "autoload": {
    "psr-4": {
      "Samwilson\\MediaWikiCLI\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Samwilson\\MediaWikiCLI\\Test\\": "tests/"
    }
  },
  "config": {
    "platform": {
      "php": "7.4"
    },
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "require": {
    "addwiki/mediawiki-api-base": "^3",
    "addwiki/mediawiki-api": "^3",
    "dnoegel/php-xdg-base-dir": "^0.1",
    "krinkle/intuition": "^2.0",
    "monolog/monolog": "^2.1",
    "symfony/console": "^5.0",
    "symfony/process": "^5.0",
    "symfony/yaml": "^5.0"
  },
  "suggest": {
    "ext-inotify": "To use the 'watch' option for the upload:pages command."
  },
  "require-dev": {
    "php-parallel-lint/php-parallel-lint": "^1.0",
    "mediawiki/mediawiki-codesniffer": "^45",
    "mediawiki/minus-x": "^1.0",
    "phpunit/phpunit": "^8.2",
    "symfony/var-dumper": "^4.3|^5.0"
  },
  "scripts": {
    "test": [
      "composer validate",
      "phpcs -s .",
      "minus-x check .",
      "./bin/mwcli readme",
      "phpunit"
    ]
  }
}
